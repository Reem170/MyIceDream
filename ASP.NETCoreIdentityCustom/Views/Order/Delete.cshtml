@model MyIceDream.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>@ViewData["Title"]</h1>

<div>
    <p>Er du sikker på, at du vil slette denne ordre?</p>
    <p>Order ID: @Model.Id</p>
    <p>Customer Name: @Model.CustomerName</p>
    <p>Total Price: @Model.TotalPrice</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Order")" class="btn btn-secondary">No, Go Back</a>
</form>
