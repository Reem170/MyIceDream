@model MyIceDream.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label for="CustomerName">Customer Name</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Time">Order Time</label>
        <input asp-for="Time" type="datetime-local" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <!-- Tilføj andre felter som nødvendigt -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Index", "Order")" class="btn btn-secondary">Back to Orders</a>
