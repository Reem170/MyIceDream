@model MyIceDream.Models.Cart

<h1>Din Kurv</h1>

<div class="cart-container">
@if (Model.Items.Count > 0)
{
    <p>Antal elementer i kurven: @Model.Items.Count</p>
    <table class="table">
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Mængde</th>
                <th>Handling</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@item.Product.Id" />
                            <div class="form-group">
                                <label for="quantity">Antal</label>
                                <input type="number" name="quantity" value="1" min="1" max="10" class="form-control" />
                            </div>
                          
                        </form>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger">Fjern</button>
                        </form>
                      


                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="ConfirmOrder" method="post">
        <div class="form-group">
            <label for="time">Vælg afhentningstid:</label>
            <input type="datetime-local" id="pickupTime" name="time" class="form-control"
                   min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
   
        </div>
        <label for="comment">Kommentar:</label>
        <textarea id="comment" name="comment" placeholder="Skriv en kommentar her..."></textarea>

        <button type="submit" class="btn btn-primary">Bekræft Bestilling</button>
    </form>
}
else
{
    <p>Din kurv er tom</p>
}

    <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Shop Videre</a>


<style>
        
        .cart-container {
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            max-width: 800px;
        }

            .cart-container h1 {
                text-align: center;
                margin-bottom: 20px;
                color: #333;
            }

        .cart-table {
            width: 100%;
            border-collapse: collapse;
        }

            .cart-table th, .cart-table td {
                padding: 10px;
                text-align: left;
            }

            .cart-table th {
                background-color: #f4f4f4;
                border-bottom: 1px solid #ddd;
            }

            .cart-table td {
                border-bottom: 1px solid #ddd;
            }

        .cart-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .cart-btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
        }

        .cart-btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .cart-form-group {
            margin-bottom: 15px;
        }

        .cart-form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .cart-textarea {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            resize: none;
            min-height: 100px;
        }

</style>